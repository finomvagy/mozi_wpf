<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
         Title="Filmek" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="MovieList" Grid.Row="0" Grid.Column="0" SelectionChanged="MovieList_SelectionChanged"
                  DisplayMemberPath="Title"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" />
            <TextBlock x:Name="YearText" Margin="0,5,0,5"/>
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
            <TextBlock Text="Új film hozzáadása" FontWeight="Bold"/>
            <Label Content="Cím:"/>
            <TextBox x:Name="TitleInput" Width="200"/>
            <Label Content="Leírás:"/>
            <TextBox x:Name="DescriptionInput" Width="200" Height="60" TextWrapping="Wrap"/>
            <Label Content="Év:"/>
            <TextBox x:Name="YearInput" Width="200"/>
            <Button Content="Létrehozás" Click="CreateButton_Click" Width="100" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
